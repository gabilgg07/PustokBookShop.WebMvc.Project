<!--=================================
      Hero Area
      ===================================== -->
<section class="hero-area hero-slider-1">
    <div class="sb-slick-slider" data-slick-setting='{
                            "autoplay": true,
                            "fade": true,
                            "autoplaySpeed": 3000,
                            "speed": 3000,
                            "slidesToShow": 1,
                            "dots":true
                            }'>
        @{List<Slider> sliders = Model.Sliders;}
        @for (int i=0;i< sliders.Count;i++)
        {
            <div class="single-slide @(i%2==0?"bg-shade-whisper":"bg-ghost-white") bg-shade-whisper  ">
                <div class="container">
                    <div class="home-content text-center text-sm-left position-relative">
                        <div class="hero-partial-image @(i%2==0?"image-right":"image-left")">
                            <img src="~/uploads/sliders/@sliders[i].Image" alt="">
                        </div>
                        <div class="row @(i%2==0?"no-gutters":"align-items-center justify-content-start justify-content-md-end")">
                            <div class="@(i%2==0?"col-xl-6":"col-lg-6 col-xl-7")  col-md-6 col-sm-7">
                                <div class="home-content-inner @(i%2==0?"content-left-side":"content-right-side")">
                                    <h1>
                                       @Html.Raw(sliders[i].Title)
                                    </h1>
                                    <h2>@sliders[i].Subtitle</h2>
                                    <a href="@sliders[i].RedirectUrl" class="btn btn-outlined--primary">
                                        @sliders[i].BtnText
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</section>
