                        <h3>
                            <a asp-controller="book" asp-action="detail" asp-route-id="@cb.Book.Id">
                                @cb.Book.Name
                            </a>
                        </h3>
                    </div>
                    <div class="product-card--body">
                        <div class="card-image">
                            <img style="height:330px; width:250px; margin:auto" src="~/image/products/@cb.Book.BookImages.FirstOrDefault(i=>i.PosterStatus==true).Image" alt="">
                            <div class="hover-contents">
                                <a asp-controller="book" asp-action="detail" asp-route-id="@cb.Book.Id" class="hover-image">
                                    <img style="height:330px; width:250px" src="~/image/products/@cb.Book.BookImages.FirstOrDefault(i=>i.PosterStatus==false)?.Image" alt="">
                                </a>
                                <div class="hover-btns">
                                    <a asp-controller="book" asp-action="addtobasket" asp-route-id="@cb.Book.Id" class="single-btn add-basket">
                                        <i class="fas fa-shopping-basket"></i>
                                    </a>
                                    <a href="wishlist.html" class="single-btn">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                    <a href="compare.html" class="single-btn">
                                        <i class="fas fa-random"></i>
                                    </a>
                                    <a asp-controller="book" asp-action="getdetailebook" asp-route-id="@cb.Book.Id" class="single-btn show-book-modal">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="price-block">
                            @if (cb.Book.DiscountedPrice == null)
                            {
                                <span class="price">£@cb.Book.Price</span>
                            }
                            else
                            {
                                <span class="price">£@cb.Book.DiscountedPrice</span>
                                <del class="price-old">£@cb.Book.Price</del>
                                <span class="price-discount">@(((cb.Book.Price- cb.Book.DiscountedPrice)*100/ cb.Book.Price)?.ToString("#.##"))%</span>
                            }
                        </div>
                        <div class="count-down-block">
                            <div class="product-countdown" data-countdown="@cb.Campaign.ExpireDate?.ToString("d",new CultureInfo("it-IT"))"></div>
                        </div>
                    </div>
                </div>
            </div>
	    }
        </div>
    </div>
</section>
