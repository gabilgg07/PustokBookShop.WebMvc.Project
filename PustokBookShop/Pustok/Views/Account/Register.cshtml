@model UserRegisterVM
@{
    ViewData["Title"] = "Register";
}

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
                <!-- Login Form s-->
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">I am a new customer</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="FullName">Full Name</label>
                                <input class="mb-0 form-control" asp-for="FullName" placeholder="Enter your full name">
                                <span class="text-danger" asp-validation-for="FullName"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Email">Email</label>
                                <input class="mb-0 form-control" asp-for="Email" placeholder="Enter Your Email Address Here..">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Username">Username</label>
                                <input class="mb-0 form-control" asp-for="Username" placeholder="Enter Your Username">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="ConfirmPassword">Repeat Password</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Repeat your password">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

