@model Setting
@{
    ViewData["Title"] = "Edit";
}

<div class=""></div>
<div class="container-fluid">
    <h1 class="text-warning">Edit</h1>
    
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xl-6 col-md-12">
                <div class="mb-3">
                    <label asp-for="Phone1" class="form-label">Phone 1</label>
                    <input asp-for="Phone1" class="form-control">
                    <span class="text-danger" asp-validation-for="Phone1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone2" class="form-label">Phone 2</label>
                    <input asp-for="Phone2" class="form-control">
                    <span class="text-danger" asp-validation-for="Phone2"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-mail</label>
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control">
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>
            <div class="col-xl-6 col-md-12 row align-items-center justify-content-center">
                <div class="col-6">
                    <div class="col-12 mb-2">
                        <div class="image-poster p3">
                            <div class="image-wrapper position-relative p-3">
                                <img style="width:100%" src="~/image/@Model.HeaderLogo" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-sm-12 mb-3 mb-sm-0 text-left">
                            <label class="custom-file-label form-control-user d-flex align-items-center justify-content-between" id="lblImageFile" asp-for="HeaderImage">
                                <span class="choose-span">Choose file...</span>
                                <span class="browse">
                                    <span class="browse-text">Browse</span>
                                </span>
                                <input asp-for="HeaderImage" class="d-none">
                            </label>
                            <span class="danger-color text-center d-inline-block w-100" asp-validation-for="HeaderImage"></span>
                        </div>
                    </div>
                    <div class="col-12 mb-2">
                        @if (Model.FooterLogo != null)
                        {
                            <div class="image-poster">
                                <div class="image-wrapper position-relative p-3">
                                    <span style="top:6px" id="deleteImage" class="delete-image position-absolute"><i class="fas fa-times"></i></span>
                                    <img style="width:100%" src="~/image/@Model.FooterLogo" />
                                    <input type="hidden" name="Image" value="@Model.FooterLogo" />
                                </div>
                            </div>
                        }
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-sm-12 mb-3 mb-sm-0 text-left">
                            <label class="custom-file-label form-control-user d-flex align-items-center justify-content-between" id="lblImageFile" asp-for="FooterImage">
                                <span class="choose-span">Choose file...</span>
                                <span class="browse">
                                    <span class="browse-text">Browse</span>
                                </span>
                                <input asp-for="FooterImage" class="d-none">
                            </label>
                            <span class="danger-color text-center d-inline-block w-100" asp-validation-for="FooterImage"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-start">
            <button type="submit" class="btn btn-primary">Edit Parameters</button>
        </div>
</form>
</div>

