@model int
@{
    ViewData["Title"] = "404 error";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- 404 Error Text -->
    <div class="text-center">
        <div class="error mx-auto" data-text="404">404</div>
        <p class="lead text-gray-800 mb-5">Page Not Found</p>
        <p class="text-gray-500 mb-0">Category with ID = @Model can not be found</p>
        <a asp-action="index" asp-controller="category">&larr; Click here to see the list of all categories</a>
    </div>

</div>
<!-- /.container-fluid -->